@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            min-height: 100vh;
            background: #eee;
            display: flex;
            font-family: sans-serif;
        }

        .container {
            margin: auto;
            margin-left: 90%;
            margin-top: 25%;
            width: 500px;
            max-width: 90%;
        }

            .container form {
                width: 100%;
                height: 100%;
                padding: 20px;
                background: white;
                border-radius: 4px;
                box-shadow: 8px 8px 18px #FF9A3B;
            }

                .container form h2 {
                    text-align: center;
                    margin-bottom: 24px;
                    color: #8933B2;
                }

                .container form .form-control {
                    width: 100%;
                    height: 40px;
                    background: white;
                    border-radius: 4px;
                    border: 1px solid silver;
                    margin: 10px 0 18px 0;
                    padding: 0 10px;
                }

                .container form .btn {
                    margin-left: 50%;
                    transform: translateX(-50%);
                    width: 120px;
                    height: 34px;
                    border: none;
                    outline: none;
                    background: #8933B2;
                    cursor: pointer;
                    font-size: 16px;
                    text-transform: uppercase;
                    color: white;
                    border-radius: 4px;
                    transition: .3s;
                }
    </style>
</head>
<body>

    <div class="container">
        <form action="Login/verifyLogin" method="post">
            <h2>Log In</h2>
            <div class="form-group">
                <label for="">Email </label>
                <input type="text" class="form-control" name="email" required="">
            </div>
            <div class="form-group">
                <label for="">Password </label>
                <input type="password" class="form-control" name="password" required="">
            </div>
            <input type="submit" class="btn" value="Login" />
        </form>
        <br />
        <p>Don't have an account, <a asp-controller="Register" asp-action="Register">register here!</a></p>
    </div>

</body>
</html>


